CREATE TABLE `member` (
  `MEMBER_SNO` int NOT NULL AUTO_INCREMENT,
  `MEMBER_ID` varchar(45) NOT NULL,
  `MEMBER_PW` varchar(255) NOT NULL,
  `MEMBER_NAME` varchar(15) NOT NULL,
  `BIRTH_DAY` datetime NOT NULL,
  `NICK_NAME` varchar(45) NOT NULL,
  `HPNO` varchar(20) NOT NULL,
  `MEMBER_STATUS_CD` varchar(1) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT 'Y',
  `JOIN_DT` datetime NOT NULL,
  `GENDER_CD` varchar(1) NOT NULL,
  `PW_UPDT_DT` datetime DEFAULT NULL,
  `UPDT_DT` datetime DEFAULT NULL,
  `MEMBR_AUTH` varchar(20) DEFAULT NULL,
  PRIMARY KEY (`MEMBER_SNO`)
) ENGINE=InnoDB AUTO_INCREMENT=8 DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci COMMENT='회원정보';